{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.proto",
        "watchAssets": true,
        "outDir": "dist/proto"
      },
      {
        "include": "proto/generated/**/*",
        "watchAssets": true,
        "outDir": "dist/proto/generated"
      }
    ]
  }
}
